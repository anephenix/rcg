#!/usr/bin/env node

// NPM Dependencies
const path = require('path');
const program = require('commander');

// File Dependencies
const generateComponent = require('../index');
const packageJson = require('../package.json');

// Parameter arguments

program.version(packageJson.version).action(async () => {
	const componentName = program.args[0];
	const srcFolderPath = path.join(process.cwd(), 'src', 'components');
	await generateComponent(componentName, srcFolderPath);
});

// Run the command
program.parse(process.argv);
