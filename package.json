{
	"name": "@anephenix/rcg",
	"version": "0.0.23",
	"description": "React Component Generator",
	"main": "index.js",
	"type": "commonjs",
	"files": [
		"bin",
		"lib",
		"index.js",
		"README.md",
		"SECURITY.md"
	],
	"scripts": {
		"lint": "npx eslint .",
		"lint:package": "npx publint",
		"cover": "npx nyc --reporter=lcov npm run test",
		"prepare": "husky",
		"prepare-patch-release": "npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin master && git push --tags",
		"size": "size-limit",
		"test": "npx mocha test/**/*",
		"update-changelog": "node scripts/update-changelog.js"
	},
	"keywords": [
		"React",
		"Component",
		"Generator"
	],
	"bin": "./bin/rcg",
	"author": "Paul Jensen <paul@anephenix.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/eslint-parser": "^7.27.1",
		"@eslint/js": "^9.2.0",
		"@size-limit/file": "^12.0.0",
		"eslint": "^9.2.0",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-mocha": "^11.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdoc": "^4.0.0",
		"mocha": "^11.0.1",
		"nyc": "^17.0.0",
		"prettier": "^3.2.5",
		"publint": "^0.3.14",
		"size-limit": "^12.0.0",
		"size-limit-node-esbuild": "^0.4.0"
	},
	"dependencies": {
		"commander": "^14.0.0",
		"to-case": "^2.0.0"
	},
	"size-limit": [
		{
			"path": "index.js",
			"limit": "10 kB"
		}
	]
}
