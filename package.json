{
	"name": "@anephenix/rcg",
	"version": "0.0.18",
	"description": "React Component Generator",
	"main": "index.js",
	"scripts": {
		"lint": "npx eslint .",
		"cover": "npx nyc --reporter=lcov npm run test",
		"prepare": "husky",
		"prepare-patch-release": "npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin master && git push --tags",
		"size": "size-limit",
		"test": "npx mocha test/**/*",
		"update-changelog": "node scripts/update-changelog.js"
	},
	"keywords": [
		"React",
		"Component",
		"Generator"
	],
	"bin": "./bin/rcg",
	"author": "Paul Jensen <paul@anephenix.com>",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.2.0",
		"eslint": "^9.2.0",
		"eslint-plugin-jest": "^28.5.0",
		"eslint-plugin-mocha": "^10.4.3",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdoc": "^4.0.0",
		"mocha": "^11.0.1",
		"nyc": "^17.0.0",
		"prettier": "^3.2.5",
		"size-limit": "^11.1.6",
		"size-limit-preset-node-lib": "^0.3.0"
	},
	"dependencies": {
		"commander": "^13.0.0",
		"to-case": "^2.0.0"
	},
	"size-limit": [
		{
			"path": "index.js",
			"limit": "10 kB"
		}
	]
}
